<% provide(:title, "New group") %>
<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header text-info">New group</h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <%= form_for :group, method: "post", url: groups_path, html: {role: "role", id: "infrastructure-form"} do |f| %>
          <%= f.label(:name, "Name") %>
          <div class="form-group">
              <%= f.text_field(:name, placeholder: "Enter name", class: 'form-control') %>
          </div>
          <%= f.label("Group description") %>
          <div class="form-group">
              <%= f.text_area(:desc, class: 'form-control') %>
          </div>
          <%= f.submit "Create", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
