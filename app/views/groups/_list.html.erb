<div class="form-group input-group">
      <%= form_for :assignment, url: associate_cluster_path, remote: true, html: { class: 'form-control', role: "form" } do |f| %>
           <%= f.hidden_field :cluster_id, :value => @cluster[:id] %>

            <span class="input-group-addon">Groups</span>
            <%= f.select(:group_id, options_for_select(@groups.map { |group| [group.name, group.id] })) %>

        <%= f.submit "Assign", class: "btn btn-success" %>
      <% end %>
</div>
