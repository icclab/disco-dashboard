<div class="modal fade bs-cluster1-modal" id="details-cluster" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content info">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="modal-title"></h4>
          </div>
          <div class="modal-body"  id="modal-body">
            <dl class="dl-horizontal">
                <dt>ID:</dt>
                <dd id="id"></dd>
                <dt># Master(s):</dt>
                <dd id="master_n">TODO</dd>
                <dt># Slave(s):</dt>
                <dd id="slave_n">TODO</dd>
                <dt>Frameworks:</dt>
                <dd>
                    <ul class="list-unstyled">
                        <li><a href="#">Spark</a></li>
                        <li><a href="#">Zeppelin</a></li>
                    </ul>
                </dd>
            </dl>
            <label>Logs</label>
            <pre id="log">
                Connecting to the openstack
                Deploying the cluster...
            </pre>
          </div>
          <div class="modal-footer">
            <%= button_to "Delete", delete_path, method: :post, remote: true, html: { id: "cluster-delete"}, data: { confirm: "Are you sure?", toggle: "modal", target: ".bs-cluster1-modal" }, class: "btn btn-danger" %>
          </div>
    </div>
  </div>
</div>
