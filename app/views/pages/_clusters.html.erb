<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-primary">
          <div class="panel-heading">
              <div class="row">
                  <div class="col-xs-9 text-left">
                      <div class="huge">Openstack</div>
                  </div>
                  <div class="col-xs-3 text-right">
                      <i class="fa fa-tasks fa-5x"></i>
                  </div>
              </div>
          </div>
          <div class="panel-body">
            <div class="row">
              <% if @servers.any? %>
                <% @servers.each do |server| %>
                  <div class="col-lg-4">
                      <%= link_to details_path(server: server, src: "openstack"), remote: true, data: { toggle: "modal", target: ".bs-cluster1-modal"} do %>
                          <div class="panel panel-info" id="<%= server[:id] %>">
                              <div class="panel-heading">
                                  <%= server[:name] %>
                              </div>
                              <div class="panel-body text-left">
                                  <dl class="dl-horizontal">
                                    <% s_image = get_image(server, true) %>
                                    <% s_flavor = get_flavor(server, true) %>
                                      <dt>OS</dt>
                                      <dd><%= s_image.name %></dd>
                                      <dt>VCPUs</dt>
                                      <dd><%= s_flavor.vcpus %></dd>
                                      <dt>RAM</dt>
                                      <dd><%= s_flavor.ram %>MB</dd>
                                      <dt>Disk</dt>
                                      <dd><%= s_flavor.disk %>GB</dd>
                                      <dt>Status</dt>
                                      <dd class="text-<%= get_status(server[:status]) %>"><strong><%= server[:status] %></strong></dd>
                                  </dl>
                              </div>
                          </div>
                      <% end %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <div class="panel-footer">
            <p><button type="button" class="btn btn-outline btn-info" data-toggle="modal" data-target=".bs-newcluster-modal">Add + </button></p>
        </div>
    </div>
  </div>
</div>
