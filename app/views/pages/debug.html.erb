
<div class="row">
  <div class="col-lg-4">
    <%= link_to details_path(server: @server), remote: true, data: { toggle: "modal", target: ".bs-cluster1-modal"} do %>
        <div class="panel panel-info">
            <div class="panel-heading">
                Cluster 3
            </div>
            <div class="panel-body text-left">
                <dl class="dl-horizontal">
                    <dt>OS</dt>
                    <dd>CoreOS</dd>
                    <dt>Cores</dt>
                    <dd>4</dd>
                    <dt>RAM</dt>
                    <dd>8GB</dd>
                    <dt>Storage</dt>
                    <dd>16GB</dd>
                    <dt>Status</dt>
                    <dd class="text-success"><strong>ACTIVE</strong></dd>
                </dl>
            </div>
        </div>
    <% end %>
  </div>
  <div class="col-lg-4">
    <%= link_to details_path(server: @server), remote: true, data: { toggle: "modal", target: ".bs-cluster1-modal"} do %>
        <div class="panel panel-info">
            <div class="panel-heading">
                Cluster 3
            </div>
            <div class="panel-body text-left" style="min-height: 240px; max-height: 240px;">
                <p></p>
                <div class="progress progress-striped active">
                  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                      <span class="sr-only">40% Complete (success)</span>
                  </div>
                </div>
                <div class="text-center">
                <p>
                    Cluster is deploying
                </p>
                </div>
            </div>
        </div>
    <% end %>
  </div>
</div>
<button type="button" class="btn btn-outline btn-info" data-toggle="modal" data-target=".bs-newcluster-modal">Add + </button>
<%= render 'pages/details' %>
<%= render 'pages/create' %>
