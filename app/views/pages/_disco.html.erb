<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-primary">
          <div class="panel-heading">
              <div class="row">
                  <div class="col-xs-9 text-left">
                      <div class="huge">Clusters</div>
                  </div>
                  <div class="col-xs-3 text-right">
                      <i class="fa fa-tasks fa-5x"></i>
                  </div>
              </div>
          </div>
          <div class="panel-body">
            <div class="row">
              <% if @disco.any? %>
                <% @disco.each do |instance| %>
                  <div class="col-lg-4">
                      <%= link_to details_path(server: instance, src: "disco"), remote: true, data: { toggle: "modal", target: ".bs-cluster1-modal"} do %>
                          <div class="panel panel-info" id="<%= instance[:id] %>">
                              <div class="panel-heading">
                                  <%= instance["kind"]["title"] %>
                              </div>
                              <div class="panel-body text-left">
                                  <dl class="dl-horizontal">
                                    <% m_image, s_image = get_image(instance, false) %>
                                    <% m_flavor, s_flavor = get_flavor(instance, false) %>
                                        <dt>Master Image</dt>
                                        <dd><%= m_image.name %></dd>
                                        <dt>Master VCPUs</dt>
                                        <dd><%= m_flavor.vcpus %></dd>
                                        <dt>Master RAM</dt>
                                        <dd><%= m_flavor.ram %>MB</dd>
                                        <dt>Master Disk</dt>
                                        <dd><%= m_flavor.disk %>GB</dd>
                                        <dt>Slave Image</dt>
                                        <dd><%= s_image.name %></dd>
                                        <dt>Slave VCPUs</dt>
                                        <dd><%= s_flavor.vcpus %></dd>
                                        <dt>Slave RAM</dt>
                                        <dd><%= s_flavor.ram %>MB</dd>
                                        <dt>Slave Disk</dt>
                                        <dd><%= s_flavor.disk %>GB</dd>
                                        <dt>Status</dt>
                                        <dd class="text-<%= get_status(instance["attributes"]["stack_status"]) %>"><strong><%= instance["attributes"]["stack_status"] ? instance["attributes"]["stack_status"] : "Deploying..." %></strong></dd>
                                  </dl>
                              </div>
                          </div>
                      <% end %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <div class="panel-footer">
            <p><button type="button" class="btn btn-outline btn-info" data-toggle="modal" data-target=".bs-newcluster-modal">Add + </button></p>
        </div>
    </div>
  </div>
</div>
