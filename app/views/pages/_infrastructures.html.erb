<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-info">
          <div class="panel-heading">
              <div class="row">
                  <div class="col-xs-9 text-left">
                      <div class="huge">Infrastructures</div>
                  </div>
                  <div class="col-xs-3 text-right">
                      <i class="fa fa-tasks fa-5x"></i>
                  </div>
              </div>
          </div>
          <div class="panel-body">
            <div class="row" id="cluster-panel">
              <% if @infrastructures && @infrastructures.any? %>
                <%= render @infrastructures %>
              <% end %>
            </div>
          </div>
        <div class="panel-footer">
            <p><button type="button" class="btn btn-outline btn-info" data-toggle="modal" data-target=".newinfrastructure">Add + </button></p>
        </div>
    </div>
  </div>
</div>
