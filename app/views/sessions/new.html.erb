<% provide(:title, "Login") %>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="form-group shadow" style="background-color:#fff; padding: 10px; text-align: center;">
          <%=image_tag("icclab.png")%>
          <%=image_tag("switchengines.png")%>
          </div>
            <div class="login-panel panel panel-default shadow">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <%= form_for :session, url: login_path, html: { role: "form" } do |f| %>
                        <fieldset>
                            <div class="form-group">
                              <%= f.label :email %>
                              <%= f.text_field :email, placeholder: "Email", class: 'form-control' %>
                            </div>
                            <div class="form-group">
                              <%= f.label :password %>
                              <%= f.password_field :password, placeholder: "Password", class: 'form-control' %>
                            </div>
                          <%= f.submit "Login", class: "btn btn-lg btn-success btn-block" %>
                        </fieldset>
                    <% end %>
                    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
                </div>
            </div>
        </div>
    </div>
</div>
