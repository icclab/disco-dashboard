<% provide(:title, "Clusters") %>
<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header text-primary">Clusters
        <% if current_user.cluster_permissions?  %>
            <%= link_to clusters_new_path do %>
              <button type="button" class="btn btn-outline btn-primary pull-right">
                  <i class="fa fa-plus fa-fw"></i> Create
              </button>
            <% end %>
          <% end %>
      </h1>
  </div>
</div>
<% if @clusters && @clusters.any? %>
  <div class="panel-group" id="accordion">
    <%= render @clusters %>
  </div>
<% else %>
  <%= render 'clusters/no_cluster' %>
<% end %>
