<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header text-primary">Clusters
        <% if current_user.usertype != 2  %>
            <%= link_to clusters_new_path do %>
              <button type="button" class="btn btn-outline btn-primary pull-right">
                  <i class="fa fa-plus fa-fw"></i> Create
              </button>
            <% end %>
          <% end %>
      </h1>
  </div>
</div>
<div class="panel-group" id="accordion">
  <% if @clusters && @clusters.any? %>
      <%= render @clusters %>
  <% end %>
  <% if @groups && @groups.any? %>
      <% @groups.each do |group| %>
        <%= render group.clusters.all %>
      <% end %>
  <% end %>
</div>

<%= render 'layouts/modal' %>
