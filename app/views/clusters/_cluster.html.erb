<div class="cluster-margin panel panel-custom shadow">
  <div class="panel-heading">
      <div class="row">
        <div class="col-xs-4">
          <h2><%= link_to cluster.name, "clusters/"+cluster.uuid, {:style=>'color:#FFFFFF;'} %></h2>
          <% if cluster.group %>
            <p>
              Assigned to group: <strong><%= cluster.group.name %></strong>
              <% if current_user.group_permissions? %>
                <%= link_to associate_cluster_path(group_id: cluster.group.id, cluster_id: cluster.id), method: :delete, remote: true, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs"  do %>
                        <i class="fa fa-times" aria-hidden="true"></i>
                <% end %>
              <% end %>
            </p>
            <% else %>
              <p> Not assigned </p>
                <% if current_user.group_permissions? && @groups.any? %>
                  <%= form_for :assignment, url: associate_cluster_path, remote: true do |f| %>
                    <%= f.hidden_field :cluster_id, :value => cluster.id %>
                    <div class="input-group">
                      <%= f.select(:group_id, options_for_select(@groups.map { |group| [group.name, group.id] }), {}, {class: 'form-control'}) %>
                      <span class="input-group-btn">
                        <%= f.submit "Assign", class: "btn btn-success" %>
                      </span>
                    </div>
                  <% end %>
                <% end %>
            <% end %>
        </div>
        <div class="col-xs-8 text-right">
          <!--<div id="circle-< %= cluster.uuid %>" class="circle-< %= get_status(cluster.state,cluster.is_suspended) %> pull-right"></div>-->
            <!--<br>-->
          <h4 id = "<%= cluster.uuid %>">
            <% if cluster.is_suspended %>
                SUSPENDED
            <% else %>
                <%= cluster.state %>
            <% end %>
          </h4><br />
          <h4>Deployed on infrastructure <%= cluster.infrastructure.name %></h4>
        </div>
      </div>
  </div>
  <div id="body-<%= cluster.uuid %>" class="panel-collapse collapse" aria-expanded="false">
    <div class="panel-body">
      <div class="row">
           <div class="col-md-4 col-xs-12 specs">
             <h3 class="text-primary">
               <strong>Master</strong>
             </h3>
               <p class="text-info"><strong><%= cluster.master_image_name %></strong></p>
               <p class="text-info">
                     <strong><%= cluster.master_flavor_vcpu %></strong> VCPUs</p>
               <p class="text-info">
                     <strong><%= cluster.master_flavor_memory   %>MB</strong> RAM</p>
               <p class="text-info">
                     <strong><%= cluster.master_flavor_disk  %>GB</strong> HDD</p>
               <% if cluster.external_ip!=0 %>
                 <p class="text-info"><a href="/clusters/<%= cluster.uuid %>/sshprivatekey"><strong>SSH private key</strong></a></p>
               <p class="text-info">IP: <strong><%= ((cluster.external_ip/(256*256*256))%256).to_s %>.<%= ((cluster.external_ip/(256*256))%256).to_s %>.<%= ((cluster.external_ip/256)%256).to_s %>.<%= (cluster.external_ip%256).to_s %></strong></p>
             <% end %>
               <p class="text-info">Username: <strong>ubuntu</strong></p>
           </div>
           <div class="col-md-4 col-xs-12 specs">
              <h3 class="text-primary">
                <strong>Slave
                  <small>
                    x<%= cluster.slave_num %>
                  </small>
                </strong>
              </h3>
               <p class="text-info"><strong><%= cluster.slave_image_name %></strong></p>
               <p class="text-info"><strong><%= cluster.slave_flavor_vcpu %></strong> VCPUs</p>
               <p class="text-info"><strong><%= cluster.slave_flavor_memory %>MB</strong> RAM</p>
               <p class="text-info"><strong><%= cluster.slave_flavor_disk %>GB</strong> HDD</p>
           </div>
           <div class="col-md-4 col-xs-12">
                <h3 class="text-primary"><strong>Frameworks: </strong></h3>
                  <% first_framework = 1 %>
                  <p class="text-info">
                  <% cluster.frameworks.all.each do |framework| %>
                      <% if first_framework == 1 %>
                          <% first_framework = 0 %>
                      <% else %>,
                      <% end %>
                        <% if cluster.external_ip != 0 %>
                          <%= link_to framework.name.capitalize, "http://"+cluster.external_ip.to_s+framework.port, target: :_blank %>
                            <% else %>
                        <%= framework.name.capitalize %>
                            <% end %>
                  <% end %>
                  </p>
           </div>
        </div>
        <br>
        <div class="row">
          <% if current_user.infrastructures.any? && current_user.infrastructures.exists?(id: cluster.infrastructure_id) %>
            <div class="col-md-4">

                <% if cluster.is_suspended==false %>
                  <%= form_for :put, method: "put", url: clusters_path, html: { id: "suspend-form"}, data: {confirm: "Do you really want to suspend this cluster?"} do |f| %>
                      <%= f.hidden_field :uuid, :value => cluster.uuid %>
                    <%= f.hidden_field :action, :value => "suspend" %>
                    <p class="text-info"><b>Suspending cluster?</b>
                      <span class="has-popover fa fa-question-circle-o fa-fw" data-toggle="popover" data-placement="top" title="Suspending a cluster" data-content="Suspending a cluster stops the cluster from operating. Once suspended, it will use less resources and can save money. It can be resumed again as soon as its operation is needed."></span>
                      <br />Please, enter infrastructure password to suspend cluster</p>
                    <div class="input-group">
                      <%= f.password_field(:password, placeholder: "Password", class: 'form-control') %>
                      <span class="input-group-btn">
                      <%= f.button(type: 'submit', class: "btn btn-warning") do %>
                        <i class="glyphicon glyphicon-pause" aria-hidden="true"></i>
                      <% end %>
                    </span>
                    </div>
                  <% end %>
                  <% else %>
                      <%= form_for :put, method: "put", url: clusters_path, html: { id: "suspend-form"}, data: {confirm: "Do you really want to resume this cluster?"} do |f| %>
                          <%= f.hidden_field :uuid, :value => cluster.uuid %>
                      <%= f.hidden_field :action, :value => "resume" %>
                      <p class="text-info"><b>Resuming cluster?</b>
                        <span class="has-popover fa fa-question-circle-o fa-fw" data-toggle="popover" data-placement="top" title="Resuming a cluster" data-content="Resuming a cluster puts it back into operation. Keep in mind that the costs will increase with a running cluster."></span>
                        <br />Please, enter infrastructure password to resume cluster</p>
                      <div class="input-group">
                        <%= f.password_field(:password, placeholder: "Password", class: 'form-control') %>
                        <span class="input-group-btn">
                      <%= f.button(type: 'submit', class: "btn btn-warning") do %>
                        <i class="glyphicon glyphicon-pause" aria-hidden="true"></i>
                      <% end %>
                    </span>
                      </div>
                      <% end %>
                  <% end %>
            </div>
              <div class="col-md-4"></div>
            <div class="col-md-4">
              <%= form_for :delete, method: "delete", url: clusters_path, html: { id: "delete-form"}, data: {confirm: "Do you really want to delete this cluster?"} do |f| %>
                  <%= f.hidden_field :uuid, :value => cluster.uuid %>
                  <p class="text-info"><b>Deleting?</b>
                    <span class="has-popover fa fa-question-circle-o fa-fw" data-toggle="popover" data-placement="top" title="Deleting a cluster" data-content="When the cluster is deleted, its resources are freed up on OpenStack and stop consuming money. The data on a deleted cluster cannot be re-created. As soon as a cluster has been deleted, its resources are available for new clusters."></span>
                    <br />Please, enter infrastructure password to delete</p>
                  <div class="input-group">
                    <%= f.password_field(:password, placeholder: "Password", class: 'form-control') %>
                    <span class="input-group-btn">
                    <%= f.button(type: 'submit', class: "btn btn-danger") do %>
                      <i class="fa fa-trash" aria-hidden="true"></i>
                    <% end %>
                  </span>
                  </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% if cluster.state == "CREATE_FAILED" %>
        <div class="text-danger bg-danger shadow" style="padding: 20px; margin: 20px;">
          <strong>Status message</strong>:<br /><samp><%= cluster.status %></samp>
        </div><% end %>
    </div>
    <div class="panel-footer">
      <a href="#body-<%= cluster.uuid %>" data-toggle="collapse" data-parent="#accordion" aria-expanded="false" class="collapsed">
          <span class="pull-left">View details</span>
          <span class="pull-right">
            <i class="fa fa-arrow-circle-right"></i>
          </span>
          <span class="clearfix"></span>
      </a>
    </div>
</div>
