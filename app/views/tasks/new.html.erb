<% provide(:title, "New Task") %>

<% if !@task.errors.empty? %>
   <div class = "alert alert-error">

      <ul>
         <% @task.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>

   </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header text-info">New task</h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <%= form_for @task, html: { multipart: true, role: "role" } do |f| %>
         <%= f.label :name %>
         <div class="form-group">
            <%= f.text_field(:name, placeholder: "Enter name", class: 'form-control') %>
         </div>
         <%= f.label :attachment %>
         <div class="form-group">
            <%= f.file_field :attachment %>
         </div>
         <%= f.hidden_field :group_id, :value => params[:group_id] %>
         <%= f.submit "Save", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
