<% provide(:title, "Settings") %>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Retrieve password</h3>
                </div>
                <div class="panel-body">

                  <%= form_tag("/newpassword", method: "post") do %>
                      <%= label_tag(:generatedcode, "Please enter your username:") %><br />
                      <%= text_field_tag(:email, @email) %><br />
                      <%= label_tag(:generatedcode, "Please enter the received code:") %><br />
                      <%= text_field_tag(:generatedcode) %><br />
                      <%= submit_tag("Submit code", class: "btn btn-primary" ) %>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
