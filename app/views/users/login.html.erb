<% provide(:title, "Login") %>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <%= form_for @user, html: { role: "form" } do |f| %>
                        <fieldset>
                            <div class="form-group">
                              <%= f.label :username %>
                              <%= f.text_field :username, placeholder: "Username", class: 'form-control' %>
                            </div>
                            <div class="form-group">
                              <%= f.label :password %>
                              <%= f.password_field :password, placeholder: "Password", class: 'form-control' %>
                            </div>
                            <div class="form-group">
                              <%= f.label :auth_url, "AuthUrl (please copy from openstack)" %>
                              <%= f.text_field :auth_url, placeholder: "URL", class: 'form-control' %>
                            </div>
                            <div class="form-group">
                              <%= f.label :tenant %>
                              <%= f.text_field :tenant, placeholder: "Tenant name", class: 'form-control' %>
                            </div>
                          <%= f.submit "Login", class: "btn btn-lg btn-success btn-block" %>
                        </fieldset>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
