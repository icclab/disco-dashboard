 <div class="row well">
    <h2><%= infrastructure.name %></h2>
    <div class="col-xs-6 specs">
        <h3>Images <small>x<%= infrastructure.images.count %></small></h3>
        <ul class="scrollable-list list-unstyled">
            <% infrastructure.images.each do |image| %>
                <li><p><%= image.name %></p></li>
            <% end %>
        </ul>
    </div>
    <div class="col-xs-6">
        <h3>Flavors <small>x<%= infrastructure.flavors.count %></small></h3>
        <ul class="scrollable-list list-unstyled">
            <% infrastructure.flavors.each do |flavor| %>
                <li><p><%= flavor.name %> (VCPUs: <%= flavor.vcpus %>, RAM: <%= flavor.ram %>GB, Disk: <%= flavor.disk %>GB)</p></li>
            <% end %>
        </ul>
    </div>
</div>
